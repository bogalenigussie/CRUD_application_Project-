<!-- include header -->
<%- include("include/_header")%>
    <!-- /include header -->

    <!--main section of the website  -->

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New Reservation <i class="fa-solid fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Time&Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include("include/_show")%>
                    </tbody>
                </table>
            </form>
        </div>
    </main>


    <!--/main section of the website  -->


    <!-- include footer -->
    <%- include("include/_footer")%>
